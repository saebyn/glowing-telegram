{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "inputs": [
    {
      "id": "service",
      "type": "pickString",
      "description": "The name of the service to run",
      "options": [
        "api",
        "crud_api"
      ]
    },
    {
      "id": "migration_name",
      "type": "promptString",
      "description": "The name of the migration"
    }
  ],
  "tasks": [
    {
      "label": "generate types from api schema",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/docs/v2/schemas",
      },
      "command": "quicktype -s schema --lang rs --visibility public --derive-debug --derive-clone --derive-partial-eq --skip-serializing-none -o ${workspaceFolder}/types/src/lib.rs --src ./",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "deploy lambda",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "AWS_PROFILE": "glowing-telegram-admin",
          "AWS_REGION": "us-west-2",
          "AWS_ACCOUNT_ID": "159222827421",
        }
      },
      "command": "./infrastructure/push_lambda.sh ${input:service}",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "cargo watch",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/${input:service}",
        "env": {
          "PORT": "8789",
        }
      },
      "command": "cargo watch -x run",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "diesel > migration run",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/${input:service}",
      },
      "command": "diesel migration run",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "diesel > migration redo",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/${input:service}",
      },
      "command": "diesel migration redo",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "diesel > migration revert",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/${input:service}",
      },
      "command": "diesel migration revert",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "diesel > migration generate",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/${input:service}",
      },
      "command": "diesel migration generate ${input:migration_name}",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}