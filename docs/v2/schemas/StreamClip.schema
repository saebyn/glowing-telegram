{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "StreamClip",
  "description": "A clip representing a cut from a source stream, with start and end",
  "properties": {
    "stream_id": {
      "type": "string",
      "format": "uuid",
      "description": "ID of the source stream for this cut"
    },
    "start_time": {
      "type": "number",
      "minimum": 0,
      "examples": [0, 0.02, 1000.7],
      "description": "Start time of the cut in seconds (relative to the start of the stream)"
    },
    "end_time": {
      "type": "number",
      "minimum": 0,
      "description": "End time of the cut in seconds (relative to the start of the stream)"
    },
    "title": {
      "type": "string",
      "description": "Title or description for this cut"
    }
  },
  "required": [
    "stream_id",
    "start_time",
    "end_time",
    "title"
  ]
}